@model IletisimBilgisi

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <div class="row">
              <div class="col-xl-12 stretch-card grid-margin">
                <div class="card">
								<div class="card-header d-flex align-items-center">
									<h5 class="mb-0">@ViewBag.SayfaAdi </h5>
									<div class="ms-auto">
										<label class="form-check form-switch form-check-reverse">
											<input type="checkbox" class="form-check-input" checked>
											<span class="form-check-label"></span>
										</label>
									</div>
								</div>
                  
                   <div class="card-body pb-0">
                       	<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IsTel" class="control-label"></label>
                <input asp-for="IsTel" class="form-control" />
                <span asp-validation-for="IsTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CepTel" class="control-label"></label>
                <input asp-for="CepTel" class="form-control" />
                <span asp-validation-for="CepTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Eposta1" class="control-label"></label>
                <input asp-for="Eposta1" class="form-control" />
                <span asp-validation-for="Eposta1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Eposta2" class="control-label"></label>
                <input asp-for="Eposta2" class="form-control" />
                <span asp-validation-for="Eposta2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres" class="control-label"></label>
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MapKordinat" class="control-label"></label>
                <input asp-for="MapKordinat" class="form-control" />
                <span asp-validation-for="MapKordinat" class="text-danger"></span>
            </div>
            
            
            
                @{
                   
                    if (Model is null )
                    {
                        <input type="hidden" value="0" asp-for="Id" /> 
                    }else
                    {
                        <input type="hidden" value="@Model.Id" asp-for="Id" /> 
                    }
                    
            }
            
          
  
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</div></div></div></div>

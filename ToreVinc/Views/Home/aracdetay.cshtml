                                        <h5>@Model.User.UserName</h5>
                                        <div class="car-single-author-social">
                                        <ul class="contact">
                                            <li><a href="tel:@Model.ilanCep"><i class="far fa-phone"></i>@Model.ilanCep</a></li>
                                            <li><i class="far fa-map-marker-alt"></i> @Model.SehirilBilgisi.ilAdi / @Model.SehirilceBilgisi.ilceAdi</li>
                                            <li><a href="mailto:@Model.User.Email"><i class="far fa-envelope"></i>@Model.User.Email</a></li>
                                        </ul>
                                        </div>
                                    }else

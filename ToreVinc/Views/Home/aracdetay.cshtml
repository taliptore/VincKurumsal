                                            {
                                                sonuctel = tel;
                                            }
                                            else if (tel.Substring(0, 1) == "0")
                                            {
                                                sonuctel = "9"+tel;
                                            }else
                                            {
                                                sonuctel = "90" + tel;
                                            }   
                                           
                                        }

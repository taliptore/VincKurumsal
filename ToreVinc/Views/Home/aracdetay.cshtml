                                <div class="panel-heading">
                                    <h4>Araç Expertiz Raporu </h4>
                                </div>

                                <div class="panel-body">

                                    @if (@Model.AracRapors is not null)
                                    {
                                        <p>
                                            <span>Başlık</span>

                                            <br>

                                            <strong>@Model.AracRapors.Baslik</strong>
                                        </p>
                                        <p>
                                            <span>Açıklama</span>

                                            <br>

                                            <strong>@Model.AracRapors.Aciklama</strong>
                                        </p>
                                        <p>
                                            <span>Raporu Veren Firma</span>

                                            <br>

                                            <strong>@Model.AracRapors.RaporuDuzunleyenFirma</strong>
                                        </p>

                                        <p>
                                            <span>Rapor Tarihi</span>

                                            <br>

                                            <strong>@Model.AracRapors.RaporVerilisTarihi.ToShortDateString()</strong>
                                        </p>
                                        <p>


                                            <strong><a href="@Model.AracRapors.RaporYolu" target="_blank">Raporu görmek için Tıklayınız</a></strong>
                                        </p>
                                    }
                                    else
                                    {
                                        <p>


                                            <strong>Araç Ekspertiz Raporu Yok.</strong>
                                        </p>
                                    }



                                </div>
                            </div>
                        </div>

<div class="site-breadcrumb" style="background: url(/motex/assets/img/breadcrumb/01.jpg)">
    <div class="container">
        <h2 class="breadcrumb-title">Araç Detay Bilgisi</h2>
        <ul class="breadcrumb-menu">
            <li><a href="~/home/arabalar">Araç Listesi</a></li>
            <li class="active">Araç Detay</li>
        </ul>
    </div>
</div>
@if (Model is not null)

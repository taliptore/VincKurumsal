@model UserDto

@{
    ViewData["Title"] = "UserEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Kayıt Silme</h2>
<hr />
@if (ViewBag.success == "true")
{
    <div class="alert alert-info">
        <span>Bilgileriniz güncellenmiştir.</span>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">

            <form asp-action="UserDelete" method="post" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>

                </dl>
                
                    <input type="hidden" asp-for="UserName" class="form-control" />
                

              

             


                <div class="form-group mt-3">
                    <input type="submit" value="Sil" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


}
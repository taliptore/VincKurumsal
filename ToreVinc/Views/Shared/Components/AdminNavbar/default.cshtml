                        var AdminVizyon = "";

                        var usersmenu = "";
                        var rolesmenu = "";
                        var signUpmenu = "";


                        var AracBilgisis = "";
                        var AracMarkas = "";

                        var BlogKategories = "";
                        var Blog = "";

                        var servisler = "";
                        var AnaSayfaMenu = "";
                        var Sayfa = "";
                        var Kadro = "";
                        var videolar = "";
                        var talep = "";
                        var sss = "";


                        if (@TempData["Menu"] is not null)
                        {
                            if (@TempData["Menu"].ToString() == "dashbord") dashbord = "active";
                            if (@TempData["Menu"].ToString() == "GenelBilgilerIndex") gmenu = "active";
                            if (@TempData["Menu"].ToString() == "Iletisim") giletisim = "active";
                            if (@TempData["Menu"].ToString() == "EpostaEdit") EpostaEdit = "active";
                            if (@TempData["Menu"].ToString() == "slide") slide = "active";
                            if (@TempData["Menu"].ToString() == "Resimler") Resimler = "active";
                            if (@TempData["Menu"].ToString() == "SosyalMedyaAdmin") SosyalMedyaAdmin = "active";
                            if (@TempData["Menu"].ToString() == "Hakkimizda") Hakkimizda = "active";
                            if (@TempData["Menu"].ToString() == "AdminVizyon") AdminVizyon = "active";

                            if (@TempData["Menu"].ToString() == "usersmenu") usersmenu = "active";
                            if (@TempData["Menu"].ToString() == "rolesmenu") rolesmenu = "active";
                            if (@TempData["Menu"].ToString() == "signUpmenu") signUpmenu = "active";

                            if (@TempData["Menu"].ToString() == "AracBilgisis") AracBilgisis = "active";
                            if (@TempData["Menu"].ToString() == "AracMarkas") AracMarkas = "active";

                            if (@TempData["Menu"].ToString() == "BlogKategories") BlogKategories = "active";
                            if (@TempData["Menu"].ToString() == "blog") Blog = "active";

                            if (@TempData["Menu"].ToString() == "servisler") servisler = "active";
                            if (@TempData["Menu"].ToString() == "AnaSayfaMenu") AnaSayfaMenu = "active";
                            if (@TempData["Menu"].ToString() == "Sayfa") Sayfa = "active";
                            if (@TempData["Menu"].ToString() == "Kadro") Kadro = "active";
                            if (@TempData["Menu"].ToString() == "videolar") videolar = "active";
                            if (@TempData["Menu"].ToString() == "talep") talep = "active";
                            if (@TempData["Menu"].ToString() == "sss") sss = "active";

                        }
                        if (@TempData["dropdown"] is not null)
                        {
                            if (@TempData["dropdown"].ToString() == "Genel")
                            { gdrop = "nav-item-open";
                                gdropsub = "show";
                            }
                            else if (@TempData["dropdown"].ToString() == "kullanici")
                            {
                                gdropkul = "nav-item-open";
                                gdropsubkul = "show";
                            }
                            else if (@TempData["dropdown"].ToString() == "arac")
                            {
                                gdroparac = "nav-item-open";
                                gdropsubarac = "show";
                            }
                            else if (@TempData["dropdown"].ToString() == "blog")
                            {
                                gdropblog = "nav-item-open";
                                gdropsubblog = "show";
                            }

                        }
                    }
                    <li class="nav-item">
                        <a href="~/admin" class="nav-link  @dashbord">
                            <i class="ph-circles-four"></i>
                            <span>     DashBord     </span>
                        </a>
                    </li>
                    <li class="nav-item nav-item-submenu @gdrop ">
                                    <a href="#" class="nav-link">
                                        <i class="ph-house"></i>
                                        <span>Genel Ayarlar</span>
                                    </a>
                        <ul class="nav-group-sub collapse @gdropsub " style="">

              
                            <li class="nav-item "><a href="~/GenelBilgiler" class="nav-link @gmenu ">Genel Bilgiler</a></li>

                            <li class="nav-item"><a href="~/Iletisim" class="nav-link @giletisim">İletişim Bilgileri</a></li>
                            <li class="nav-item"><a href="~/admin/EpostaEdit" class="nav-link @EpostaEdit">Mail Ayarı</a></li>
                            <li class="nav-item"><a href="~/slide" class="nav-link @slide">Site Silder İşlemleri</a></li>

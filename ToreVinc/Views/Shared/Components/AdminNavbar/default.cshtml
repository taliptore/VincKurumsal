                        var gdroparac = "";
                        var gdropsubarac = "";
                        var gdropblog = "";
                        var gdropsubblog = "";
                        var gmenu = "";
                        var giletisim = "";
                       
                        var EpostaEdit = "";
                        var slide = "";
                        var Resimler = "";

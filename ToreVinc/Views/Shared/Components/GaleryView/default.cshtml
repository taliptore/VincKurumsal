@model List<Resimler>
@if (Model.Count > 0)
{
 

    <!-- OUR PROJECTS
    ================================================== -->
    <section>
        <div class="container">
            <div class="section-title mb-2-3 mb-md-6 text-center">
                <span class="sub-title wow text-animation" data-in-effect="fadeInRight">Resimlerimiz</span>
                <h2 class="h1">Resimlerimiz</h2>
            </div>

            <div class="row g-xl-5 mt-n2-6 portfolio-gallery">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-lg-4 mt-2-6" style="width: 300.4px; height:400px; margin-right: 30px;"
                    data-src="@item.Path" data-sub-html="<h4 class='text-white'>@item.Baslik</h4>">
                        <div class="card card-style3">
                            <div class="card-flip-details">
                                <div class="card-flip-front">
                                    <img class="card-img" style="width: 337.4px; height:424px; margin-right: 30px;"
                                 src="~/@item.Path" alt="Portfolio thumb">
                                </div><a class="card-flip-back" href="~/Home/Gallery">
                                    <div class="card-body">
                                        <div class="card-body-inner">
                                            <h3 class="h5 mb-2">@item.Baslik</h3>
                                            <p class="fs-sm text-muted">@item.Baslik</p>
                                            @* <p class="butn secondary sm mb-0 portfolio-link"><span>View project</span></p>*@
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>
    </section>
}



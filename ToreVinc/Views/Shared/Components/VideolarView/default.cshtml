                            link = item.YoutubeLink;
                        }
                        <div class="mb-6 mb-lg-8 position-relative elements-block">
                            <div class="inner-title">
                                <h2 class="mb-0">@item.VideoBaslik</h2>
                            </div>
                            <div>

                                <iframe class="w-100 height-400 border-radius-5" src="@link" allow="encrypted-media" allowfullscreen></iframe>

                                @*   <div class="opacity-extra-medium bg-black"></div>
                        <div class="inner-border"></div>
                        <div class="text-center position-absolute top-50 start-50 translate-middle z-index-1">
                        <a class="popup-social-video video_btn" href="@link">
                        <span>
                        <i class="fas fa-play"></i>
                        </span>
                        </a>
                        </div>*@
                            </div>
                        </div>

                    }

                    <!-- end youtube video section -->



                </div>


            </div>
        </div>

    </section>
}


@model IEnumerable<Servisler>

@{
    ViewData["Title"] = "Hizmetlerimiz";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12 stretch-card grid-margin">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="mb-0">@ViewBag.SayfaAdi </h5>
                <div class="ms-auto">
                    <div class="ms-auto">
                        <a asp-action="Create"
                           class="btn btn-primary">
                            <i class="ph-plus">Yeni Kayıt</i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body pb-0">
                <div class="row">
                    @{
                        if(Model is not null)
                        {
                            <table class="table media-library">
                                <thead>
                                    <tr>
                                        <th>
                                        <input type="checkbox" class="form-check-input"></th>
                                        <th>
                                            Resim
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Id)
                                        </th>
                                        <th>
                                           Hizmet Adı
                                        </th>
                                        <th>
                                           Hizmet Açıklama
                                        </th>
                                        
                                        
                                      
                                        <th>
                                            @Html.DisplayNameFor(model => model.Durum)
                                        </th>
                                        <th>Hizmet Talebi</th>
                                        <th >İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <input value="@item.Id" type="checkbox" class="form-check-input">
                                            </td>
                                            <td>
                                                <a href="@item.ServisResim" data-bs-popup="lightbox">
                                                    <img src="@item.ServisResim" alt="" class="img-preview rounded">
                                                </a>
                                            </td>
                                           <td>
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ServisAdi)
                                            </td>
                                            <td data-bs-popup="tooltip" data-bs-original-title="@item.ServisAciklama">
                                                @Html.Raw(item.ServisAciklama.ToString().Substring(0,item.ServisAciklama.ToString().Length>30?30:item.ServisAciklama.ToString().Length))
                                                @if (item.ServisAciklama.ToString().Length > 30)
                                                    @Html.Raw("...")
                                            </td>
                                             
                                           
                                         
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Durum)
                                            </td>
                                              

                                            <td style="width:110px;">
                                               
                                            <a asp-action="HizmetTalep" class="text-teal  mx-2" asp-route-id="@item.Id" data-bs-popup="tooltip" data-bs-original-title="Hizmet talebinde formu ayarlar "> <i class="ph-eye"></i></a>
                                               

                                            </td>

                                                <td style="width:110px;">
                                                <a asp-action="HizmetTalep" class="text-primary " asp-route-id="@item.Id" data-bs-popup="tooltip" data-bs-original-title="Hizmet Detay Sayfası Belirle"> <i class="ph-plus"></i></a>
                                                <a asp-action="Edit" class="text-primary " asp-route-id="@item.Id" data-bs-popup="tooltip" data-bs-original-title="Düzünle"> <i class="ph-pen"></i></a>
                                                @*<a asp-action="Details" class="text-teal  mx-2" asp-route-id="@item.Id" data-bs-popup="tooltip" data-bs-original-title="İncele"> <i class="ph-eye"></i></a>*@
                                                <a asp-action="Delete" class="text-danger " asp-route-id="@item.Id" data-bs-popup="tooltip" data-bs-original-title="Sil"><i class="ph-trash"></i></a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                              <p>Kayıt Bulunamadı.</p>  
                        }
                    }

</div></div></div></div></div>


@section Scripts {
    <script src="~/assets/js/jquery/jquery.min.js"></script>
    <script src="~/assets/js/vendor/tables/datatables/datatables.min.js"></script>
    <script src="~/assets/js/vendor/media/glightbox.min.js"></script>

    
    <script src="~/assets/demo/pages/gallery_library.js"></script>
 }
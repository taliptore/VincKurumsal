@model IEnumerable<AracModel>

@{
    ViewData["Title"] = "ModelEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 
<div class="content">

    <!-- Media library -->
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h6 class="mb-0">Araç  Listesi</h6>
            <div class="ms-auto">
                <a asp-action="CreateModel"
                   class="btn btn-primary">
                    <i class="ph-plus">Yeni Model Ekle</i>
                </a>
            </div>
        </div>
        <div class="card-body pb-0">
            <div class="row">

                <table class="table media-library table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModelKodu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AracMarkaKodu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Durum)
            </th>
            
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModelKodu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelAdi)
            </td>
            <td>
                    @TempData["MarkaAdi"]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durum)
            </td>
            
            <td>
                    <a asp-action="EditModel" class="text-primary " asp-route-id="@item.Id" data-bs-popup="tooltip" data-bs-original-title="Düzünle"> <i class="ph-pen"></i></a>
                                    @*<a asp-action="DetailsModel" class="text-teal  mx-2" asp-route-id="@item.Id" data-bs-popup="tooltip" data-bs-original-title="İncele"> <i class="ph-eye"></i></a>*@
                                    <a asp-action="DeleteModel" class="text-danger " asp-route-id="@item.Id" data-bs-popup="tooltip" data-bs-original-title="Sil"><i class="ph-trash"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
</div></div></div></div>
@section Scripts {

    <!-- Theme JS files -->

    <script src="~/assets/js/vendor/tables/datatables/datatables.min.js"></script>
    <script src="~/assets/js/vendor/media/glightbox.min.js"></script>

    @*<script src="~/assets/js/app.js"></script>*@
    <script src="~/assets/demo/pages/gallery_library.js"></script>


}
@model List<AppUser>
@{
	ViewData["Title"] = "";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



	<!-- Page content -->
	<div class="row">
		<div class="col-xl-12 stretch-card grid-margin">
			<div class="card">
				<div class="card-header d-flex align-items-center">
					<h5 class="mb-0">Kullanıcı Listesi </h5>
					
				</div>

					<!-- Scrollable table -->
				 
						

						<div class="card-body">
							Kullanıcı ekleme, silme ve yetkilendirme işlemlerini bu bölümden yapabilirsiniz.

					     <div class="table-responsive ">
						<table class="table  ">
							<thead>
								<tr>
									<th>#</th>
									<th>Kullanıcı Adı</th>
									<th>Eposta</th>
									<th>Telefon</th>
									<th>Rolü</th>
									<th>İşlemler</th>
								</tr>
							</thead>
							<tbody>
								@if (Model.Count() == 0)
								{
									<tr>
										<td colspan="6">Kayıtlı kullanıcı yok.</td>
									</tr>
								}
								else
								{
									int i = 1;
									@foreach (var item in Model)
									{
										<tr>
											<td>@i</td>
											<td>@item.UserName</td>
											<td>@item.Email</td>
											<td>@item.PhoneNumber</td>
											<td></td>
											@*user.id gönderildi*@
											<td>
												<a class="btn btn-success" asp-action="PasswordChange" asp-route-id="@item.Id">Şifre Yenileme</a>
												<a class="btn btn-primary" asp-action="RoleAssign" asp-route-id="@item.Id">Rol Ata</a>
												<a class="btn btn-danger" asp-action="UserDelete" asp-route-id="@item.Id">Kullancı Sil</a>
												<a class="btn btn-warning" asp-action="UserEdit" asp-route-id="@item.Id">Kullancı Düzenle</a>

											</td>
										</tr>
										i++;
									}
								}
							</tbody>
						</table>
					</div>
						
						</div>

						
					</div>
					<!-- /scrollable table -->
			 
				</div></div>
		

 


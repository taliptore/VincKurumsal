@model             Icerik

@{
    ViewData["Title"] = "SayfaGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model is not null)
{


    <div class="site-breadcrumb" style="background: url(/motex/assets/img/breadcrumb/01.jpg)">
        <div class="container">
            <h2 class="breadcrumb-title"> @Model.Baslik</h2>
            <ul class="breadcrumb-menu">
                <li><a href="~/home">Anasayfa</a></li>
                <li class="active">@Model.Baslik</li>
            </ul>
        </div>
    </div>

    <div class="about-area py-120">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="about-left wow fadeInLeft" data-wow-delay=".25s">
                        <div class="about-img">
                            @if (Model.KucukResim is not null)
                            {
                                <img src="@Html.DisplayFor(model => model.KucukResim)" alt="">
                            }
                            else
                            {
                                <img src="/motex/assets/img/about/01.png" alt="">

                            }

                            </div>
                           
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-right wow fadeInRight" data-wow-delay=".25s">
                            <div class="site-heading mb-3">
                                <span class="site-title-tagline justify-content-start">
                                <i class="flaticon-drive"></i> @Html.DisplayFor(model => model.Baslik)
                                </span>
                                <h2 class="site-title">
                                @Html.DisplayFor(model => model.Baslik)

                                </h2>
                            </div>
                            <p class="about-text">
                                @Html.Raw(Model.Metin)
                            </p>


                        </div>
                    </div>
                </div>
            </div>
        </div>
      
    }else
    {
<p>Lütfen Veri tabanından Hakımzda verisi giriniz</p>
}




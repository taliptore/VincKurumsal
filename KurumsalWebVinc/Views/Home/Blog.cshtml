@model  Icerik

@{
    ViewData["Title"] = "SayfaGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{if (Model is not null)
{
     

      

        <div class="site-breadcrumb" style="background: url(/motex/assets/img/breadcrumb/01.jpg)">
            <div class="container">
                <h2 class="breadcrumb-title">Bizden Haberiniz Olsun</h2>
                <ul class="breadcrumb-menu">
                    <li><a href="~/Home">Anasayfa</a></li>
                    <li class="active">Haberler</li>
                </ul>
            </div>
        </div>

        <!-- BLOG-DETAIL
        ================================================== -->
        <div class="blog-single-area pt-120 pb-120">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="blog-single-wrapper">
                            <div class="blog-single-content">
                                <div class="blog-thumb-img">
                                    @if (Model.KucukResim is not null)
                                    {                                    
                                    <img src="@Html.DisplayFor(model => model.KucukResim)" alt="thumb">
                                    }else
                                    {
                                    <img src="/motex/assets/img/blog/single.jpg" alt="thumb">
                                    }
                                     
                                </div>
                                <div class="blog-info">
                                    <div class="blog-meta">
                                        <div class="blog-meta-left">
                                            <ul>
                                                <li><i class="far fa-user"></i><a href="#"></a></li>
                                                <li><i class="far fa-calendar-alt"></i> @Model.CreateDate.ToShortDateString();</li>
                                                
                                            </ul>
                                        </div>
                                        <div class="blog-meta-right">
                                            <a href="#" class="share-btn"><i class="far fa-share-alt"></i>Paylaş</a>
                                        </div>
                                    </div>
                                    <div class="blog-details">
                                        <h3 class="blog-details-title mb-20">@Model.Baslik</h3>
                                        <p>@Html.Raw(Model.Metin )</p>
                                     
                                    </div>
                                  
                                </div>
                                 
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <aside class="sidebar">
                            <!-- search-->
                            <div class="widget search">
                                <h5 class="widget-title">Ara</h5>
                                <form class="search-form">
                                    <input type="text" class="form-control" placeholder="Arama...">
                                    <button type="submit"><i class="far fa-search"></i></button>
                                </form>
                            </div>
                            <!-- category -->
                            <div class="widget category">
                                <h5 class="widget-title">Kategoriler</h5>
                                <div class="category-list">
                                    @foreach (var item in (List<BlogKategory>)ViewBag.BlogKatedetay)
                                    {
                                        
                                        <a href="~/home/blogsayfa"><i class="far fa-arrow-right"></i>@item.Adi<span>(@item.Id)</span></a>
                                    }
                                   
                                    
                                </div>
                            </div>
                            <!-- recent post -->
                            <div class="widget recent-post">
                                <h5 class="widget-title">Son Yazılar</h5>
                                @foreach (var item in (List<Blog>)ViewBag.sonyazi)
                                {
                                <div class="recent-post-single">
                                    <div class="recent-post-img">
                                            @if (item.BlogResim is not null)
                                            {
                                            
                                            <img src="@item.BlogResim" alt="thumb">
                                            }else
                                            {
                                            <img src="/motex/assets/img/blog/bs-1.jpg" alt="thumb">
                                            }
                                       
                                    </div>
                                    <div class="recent-post-bio">
                                        <h6><a href="#">@item.BlogBaslik</a></h6>
                                        <span><i class="far fa-clock"></i>@item.CreateDate</span>
                                    </div>
                                </div>
                                }
                              
                            </div>
                            <div class="widget recent-post">
                                <h5 class="widget-title">Arşiv</h5>
                                @foreach (var item in (List<BlogKategory>)ViewBag.blokkatarsiv)
                                {
                                    <div class="recent-post-single">
                                         
                                        <div class="recent-post-bio">

                                            <p>@item.Adi<span><i class="far fa-clock"></i>@item.Id</span></p>
                                        </div>
                                    </div>
                                }

                            </div>
                            <!-- social share -->
                            <div class="widget social-share">
                                <h5 class="widget-title">Bizi Takip Edin</h5>
                                <div class="social-share-link">
                                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#"><i class="fab fa-twitter"></i></a>
                                    <a href="#"><i class="fab fa-dribbble"></i></a>
                                    <a href="#"><i class="fab fa-whatsapp"></i></a>
                                    <a href="#"><i class="fab fa-youtube"></i></a>
                                </div>
                            </div>
                            <!-- Recent Post -->
                           
                        </aside>
                    </div>
                </div>
            </div>
        </div>

    }
}

@model             Icerik

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12 stretch-card grid-margin">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="mb-0">@ViewBag.SayfaAdi </h5>
                <div class="ms-auto">
                    <label class="form-check form-switch form-check-reverse">
                        <input type="checkbox" class="form-check-input" checked>
                        <span class="form-check-label"></span>
                    </label>
                </div>
            </div>

            <div class="card-body pb-0">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="CreateEditor"  onsubmit="handleSubmit()">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Baslik" class="control-label"></label>
                                <input asp-for="Baslik" class="form-control" />
                                <span asp-validation-for="Baslik" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Yazar" class="control-label"></label>
                                <input asp-for="Yazar" class="form-control" />
                                <span asp-validation-for="Yazar" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="KisaYazi" class="control-label"></label>

                                <textarea asp-for="KisaYazi" rows="5" class="form-control"> </textarea>
                                <span asp-validation-for="KisaYazi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Url" class="control-label"></label>
                                <input asp-for="Url" class="form-control" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="KucukResim" class="control-label"></label>
                                <input asp-for="KucukResim" class="form-control" />
                                <span asp-validation-for="KucukResim" class="text-danger"></span>
                            </div>
                        
                            <div class="form-group">
                                <label asp-for="SeoBaslik" class="control-label"></label>
                                <input asp-for="SeoBaslik" class="form-control" />
                                <span asp-validation-for="SeoBaslik" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SeoAciklama" class="control-label"></label>
                                <input asp-for="SeoAciklama" class="form-control" />
                                <span asp-validation-for="SeoAciklama" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Etiket" class="control-label"></label>
                                <input asp-for="Etiket" class="form-control" />
                                <span asp-validation-for="Etiket" class="text-danger"></span>
                            </div>


                            <input type="hidden" asp-for="Id" value="0" class="form-control" />
                            <input type="hidden" asp-for="AltMenuId" value="0" class="form-control" />
                            <input type="hidden" asp-for="MenuId" value="0" class="form-control" />

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Durum" /> @Html.DisplayNameFor(model => model.Durum)
                                </label>
                            </div>

                            <div class="form-group">
                                <label asp-for="Metin" class="control-label"></label>

                                @*<textarea asp-for="Metin" name="Metin" rows="5" class="editor"> </textarea>*@
                                <span asp-validation-for="Metin" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Metin"  name="Metin" />
                            <div id="editor"  class="editor'">
                               
                                </div>
                            <hr />
                            <div class="form-group">
                                <input type="submit" value="Kaydet" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {

    <!-- Main Quill library -->
    @*<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>*@
    <script src="~/assets/demo/demo_configurator.js"></script>
    <script src="~/assets/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/vendor/editors/quill/quill.min.js"></script>
    @*<script src="~/assets/demo/pages/editor_quill.js"></script>*@
    <link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet" />
  

    <script>

 

        var editor = new Quill('#editor', {
            modules: {
                toolbar: [
                    [{ 'font': [] }],
                    [{ 'size': ['small', false, 'large', 'huge'] }],
                    [{ 'header': [1, 2, 3, 4, 5, 6, false] }],
                    ['bold', 'italic', 'underline', 'strike'],
                    ['blockquote', 'code-block'],
                    [{ 'header': 1 }, { 'header': 2 }],
                    [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                    [{ 'script': 'sub' }, { 'script': 'super' }],
                    [{ 'indent': '-1' }, { 'indent': '+1' }],
                    [{ 'direction': 'rtl' }],
                    [{ 'color': [] }, { 'background': [] }],
                    [{ 'align': [] }],
                    ['formula', 'image', 'video'],
                    ['clean']
                ]
            },
            bounds: '.content-inner',
            placeholder: 'Please add your text here...',
            theme: 'snow'
        });

        var form = document.querySelector('form');
        form.onsubmit = function () {
            
            // Populate hidden form on submit
            var Metin = document.querySelector('input[name=Metin]');
            Metin.value = editor.getContents();
            alert(editor.getContents().);
        };
       
        </script>
}

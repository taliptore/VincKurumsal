@model             Videolar

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12 stretch-card grid-margin">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="mb-0">Video Ayarları </h5>
                <div class="ms-auto">
                    <label class="form-check form-switch form-check-reverse">
                        <input type="checkbox" class="form-check-input" checked>
                        <span class="form-check-label"></span>
                    </label>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="row">
                <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VideoBaslik" class="control-label"></label>
                <input asp-for="VideoBaslik" class="form-control" />
                <span asp-validation-for="VideoBaslik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoAciklama" class="control-label"></label>
                <input asp-for="VideoAciklama" class="form-control" />
                <span asp-validation-for="VideoAciklama" class="text-danger"></span>
            </div>


                    <input type="hidden" asp-for="VideoYol" class="form-control" />
            
            <div class="form-group">
                <label asp-for="YoutubeLink" class="control-label"></label>
                <input asp-for="YoutubeLink" class="form-control" />
                <span asp-validation-for="YoutubeLink" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Durum" /> @Html.DisplayNameFor(model => model.Durum)
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
        </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Video  </h5>
                            <div class="ms-auto">
                                <label class="form-check form-switch form-check-reverse">
                                     
                                </label>
                            </div>
                        </div>


                        @{
                            var link = Model.VideoYol;
                            if (Model.YoutubeLink is not null)
                            {
                                link = Model.YoutubeLink;
                            }
                        }
                        <div class="card-body pb-3">
                            <div class="form-group">
                      <div class="mb-6 mb-lg-8 position-relative elements-block">
                                    <div class="inner-title">
                                        <h2 class="mb-0">@Model.VideoBaslik</h2>
                                    </div>
                                    <div>
                                <iframe class="w-100 height-400 border-radius-5" src="@link" allow="encrypted-media" allowfullscreen></iframe>
                                </div></div>

                            </div>
                        </div>
                    </div>
                </div>
                
    </div>
    </div>
</div>


</div></div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
